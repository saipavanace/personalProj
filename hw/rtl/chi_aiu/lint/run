#!/bin/csh

set TOTAL = `grep -RI "node" $WORK_TOP/dv/aiu/tb/testlist | grep -v "\-t" | grep -v "#" | wc -l`
set UNIT = `grep -RI "node" $WORK_TOP/dv/aiu/tb/testlist | grep -v "\-t" | grep -v "#" | awk '{print $4}'`
set NAME = `grep -RI "node" $WORK_TOP/dv/aiu/tb/testlist | grep -v "\-t" | grep -v "#" | awk '{print $6}'`
set CONFIG = `grep -RI "node" $WORK_TOP/dv/aiu/tb/testlist | grep -v "\-t" | grep -v "#" | awk '{print $13}'`

make clean

if ($1 != "run_only") then

rm -rf testlist
touch testlist

@ i = 1
while ($i <= $TOTAL)

    echo "node ../../../dv/scripts/rsim.js -m -a -e $UNIT[$i] -c -n $NAME[$i] -d RTL_DUT,INHOUSE_AXI,ASSERT_ON,DUMP_ON,V1 -r -C $CONFIG[$i]" >> testlist
    @ i++

end

tclsh ../../../dv/scripts/par_run.tcl -m 3 -e . -f testlist

endif

if ($1 != "compile_only") then

@ i = 1
while ($i <= $TOTAL)

    make spyglass NAME=$NAME[$i] FILE=../../../../debug/$UNIT[$i]/$NAME[$i]/rtl/\*.v FILE2=../../../../debug/$UNIT[$i]/$NAME[$i]/memory/\*.v WAIVER=../scripts/waivers.swl
    @ i++

end

endif

rm -rf lint_aiu.js
touch lint_aiu.js

echo "'use strict';" >> lint_aiu.js
echo "var exec = require('child_process').exec," >> lint_aiu.js
echo "expect = require('chai').expect;" >> lint_aiu.js
echo "describe('AIU Lint Report', function () {" >> lint_aiu.js

@ i = 1
while ($i <= $TOTAL)

    echo "it('AIU Lint $NAME[$i]', function (done) {" >> lint_aiu.js
    echo "exec('grep -RI "\"Error \"" rtl/aiu/lint/lint.$NAME[$i]/lint/consolidated_reports/lint_lint_rtl/moresimple.rpt | wc -l', function (e, sto1, ste1) {" >> lint_aiu.js
    echo "expect(sto1).to.equal('0\\n');" >> lint_aiu.js
    echo "done();" >> lint_aiu.js
    echo "});" >> lint_aiu.js
    echo "});" >> lint_aiu.js
    @ i++

end

echo "});" >> lint_aiu.js
