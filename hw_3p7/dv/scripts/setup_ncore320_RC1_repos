cd $WORK_TOP
git config --unset-all remote.origin.fetch
git config --add remote.origin.fetch +refs/heads/Ncore320_RC1:refs/remotes/origin/Ncore320_RC1
git config --add remote.origin.fetch +refs/heads/Ncore3:refs/remotes/origin/Ncore3
git config --add remote.origin.fetch +refs/heads/master:refs/remotes/origin/master
git fetch
git checkout Ncore320_RC1
echo "hw-ncr: Ncore3 using branch Ncore320_RC1"

cd ../hw-ccp/
git config --unset-all remote.origin.fetch
git config --add remote.origin.fetch +refs/heads/Ncore3:refs/remotes/origin/Ncore3
git config --add remote.origin.fetch +refs/heads/master:refs/remotes/origin/master
git fetch
git checkout ncore320_RC1
echo "hw-ccp: Ncore3 using tag ncore320_RC1"

cd ../hw-lib/
git config --unset-all remote.origin.fetch
git config --add remote.origin.fetch +refs/heads/master:refs/remotes/origin/master
git fetch
git checkout ncore320_RC1
echo "hw-lib: Master using tag ncore320_RC1"

cd ../hw-sym/
git config --unset-all remote.origin.fetch
git config --add remote.origin.fetch +refs/heads/master:refs/remotes/origin/master
git fetch
git checkout ncore320_RC1
echo "hw-sym: Master using tag ncore320_RC1"

cd ../hw-scripts/
git config --unset-all remote.origin.fetch
git config --add remote.origin.fetch +refs/heads/Ncore3:refs/remotes/origin/Ncore3
git config --add remote.origin.fetch +refs/heads/master:refs/remotes/origin/master
git fetch
git checkout ncore320_RC1
echo "hw-scripts: Ncore3 using tag ncore320_RC1"

cd ../hw-test-projects/
git config --unset-all remote.origin.fetch
git config --add remote.origin.fetch +refs/heads/Ncore320_RC1:refs/remotes/origin/Ncore320_RC1
git config --add remote.origin.fetch +refs/heads/Ncore3:refs/remotes/origin/Ncore3
git config --add remote.origin.fetch +refs/heads/master:refs/remotes/origin/master
git fetch
git checkout Ncore320_RC1
echo "hw-test-projects: Ncore3 using branch Ncore320_RC1"

cd ../hw-ncr/
